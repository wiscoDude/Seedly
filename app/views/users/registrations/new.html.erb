<h2>Register</h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="inputs">
    <%= f.input :registration_code, :required => true, :autofocus => true, :label => 'Code on your kit' %>
    <%= f.input :postal_code, :required => true, :label => 'Your zip code' %>
    <%= f.input :first_name, :required => true, :label => 'First name' %>
    <%= f.input :email, :required => true %>
    <%= f.input :password, :required => true, :label => 'Choose a password' %>
  </div>

  <div class="actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>

<%= render "links" %>
